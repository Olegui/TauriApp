{
  "build": {
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "CampoTV Plus",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false, 
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      }
    },
    "windows": [
      {
        "fullscreen": true,      
        "resizable": true,
        "title": "CampoTV Plus",
        "width": 1024,
        "height": 600, 
        "minWidth": 1024,
        "minHeight": 600,
        "center": true,
        "alwaysOnTop": true,
        "transparent": true,
        "hiddenTitle": true,
        "decorations": true,
        "url": "https://campotvplus.com.br/"
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.campotvplus.cwbox",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/icon.ico"
      ],
      "windows": {
        "wix": {
          "language": ["pt-BR"]
        }
      }
    },
    "security": {
      "csp": null,
      "dangerousRemoteDomainIpcAccess": [
        {
          "windows": ["main", "settings"],
          "domain": "https://campotvplus.com.br/",
          "plugins": ["trusted-plugin"],
          "enableTauriAPI": false
        }
      ]
    }
  }
}
